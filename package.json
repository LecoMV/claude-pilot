{
  "name": "claude-pilot",
  "version": "0.1.0",
  "description": "Professional session control for Claude Code - manage profiles, monitor resources, and orchestrate workflows",
  "main": "out/main/index.js",
  "author": "Alex Mayhew",
  "license": "MIT",
  "private": true,
  "type": "module",
  "homepage": "https://alexmayhew.dev/claude-pilot",
  "repository": {
    "type": "git",
    "url": "https://github.com/LecoMV/claude-pilot"
  },
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "start": "electron .",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "xvfb-run --auto-servernum playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test:run && npm run build && npm run test:e2e",
    "dist": "electron-vite build && electron-builder",
    "dist:linux": "electron-vite build && electron-builder --linux",
    "dist:mac": "electron-vite build && electron-builder --mac",
    "dist:win": "electron-vite build && electron-builder --win",
    "dist:all": "electron-vite build && electron-builder --linux --mac --win",
    "prepare": "husky"
  },
  "dependencies": {
    "@electron-toolkit/utils": "^3.0.0",
    "@monaco-editor/react": "^4.7.0",
    "@qdrant/js-client-rest": "^1.16.2",
    "@sentry/electron": "^7.6.0",
    "@tanstack/react-query": "^5.90.19",
    "@testing-library/dom": "^10.4.1",
    "@trpc/client": "^11.0.0",
    "@trpc/react-query": "^11.0.0",
    "@trpc/server": "^11.0.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-webgl": "^0.18.0",
    "@xterm/xterm": "^5.5.0",
    "better-sqlite3": "^11.7.0",
    "chokidar": "^4.0.3",
    "clsx": "^2.1.1",
    "cytoscape": "^3.30.4",
    "dotenv": "^17.2.3",
    "electron-store": "^10.0.0",
    "electron-trpc": "^1.0.0-alpha.0",
    "electron-updater": "^6.7.3",
    "execa": "^9.6.1",
    "graphology": "^0.26.0",
    "graphology-layout-forceatlas2": "^0.10.1",
    "lucide-react": "^0.469.0",
    "monaco-editor": "^0.55.1",
    "neo4j-driver": "^6.0.1",
    "node-pty": "^1.0.0",
    "opossum": "^9.0.0",
    "p-queue": "^9.1.0",
    "pg": "^8.17.1",
    "piscina": "^5.1.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-virtuoso": "^4.18.1",
    "reactflow": "^11.11.4",
    "recharts": "^2.15.0",
    "sigma": "^3.0.2",
    "superjson": "^2.2.6",
    "tailwind-merge": "^2.6.0",
    "zod": "^3.25.76",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/better-sqlite3": "^7.6.12",
    "@types/cytoscape": "^3.21.8",
    "@types/node": "^22.10.5",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^2.1.8",
    "autoprefixer": "^10.4.20",
    "electron": "^34.0.0",
    "electron-builder": "^25.1.8",
    "electron-vite": "^2.3.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^15.5.2",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.53.0",
    "vite": "^5.4.0",
    "vitest": "^2.1.8"
  },
  "build": {
    "appId": "dev.alexmayhew.claude-pilot",
    "productName": "Claude Pilot",
    "copyright": "Copyright Â© 2024 Alex Mayhew",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "out/**/*",
      "!out/**/*.map"
    ],
    "extraResources": [
      {
        "from": ".env.example",
        "to": ".env.example"
      }
    ],
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icons",
      "category": "Development",
      "maintainer": "Alex Mayhew <alex@alexmayhew.dev>",
      "synopsis": "Claude Code session management",
      "description": "Professional session control for Claude Code - manage profiles, monitor resources, and orchestrate workflows"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icons/icon.icns",
      "category": "public.app-category.developer-tools",
      "darkModeSupport": true,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "LecoMV",
      "repo": "claude-pilot",
      "releaseType": "release"
    }
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
